<h1>ログイン</h1>
<%# varidationエラー時はメッセージ表示 %>
<% if @error_message %>
    <p>
        <%= @error_message %>
    </p>
<% end %>

<%= form_with url: "/users/authorize" do |form|%>
    <div>
        <p>ユーザ名</p>
        <dl>
            <dd>入力条件</dd>
            <dt>半角英数字記号いずれかからなる組み合わせ</dt>
            <dt>6〜15文字以内</dt>
        </dl>
        <%= form.text_field :user_name, value: @user_name %>
    </div>
    <div>
        <p>パスワード</p>
        <dl>
            <dd>入力条件</dd>
            <dt>半角英数字記号全てを含んだ組み合わせ</dt>
            <dt>10〜20文字以内</dt>
        </dl>
        <%= form.password_field :user_password, value: @user_password %>
    </div>
    <%= form.submit "SEND" %> 
<% end %>